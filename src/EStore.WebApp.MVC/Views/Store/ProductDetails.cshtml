@model EStore.Catalog.Application.Dtos.ProductDto


@{
    ViewData["Title"] = "Detalhe Produto" + Model.Name;
}

<h4>@ViewData["Title"]</h4>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-4 item-photo">
            <img width="400" height="400" src="~/Images/@Model.Image"/>
        </div>

        <div class="col-md-6" style="border:20px solid white">
            <h3>@Model.Name</h3>

            <h6 class="title-price"><small>OFERTA</small></h6>
            <h3 style="margin-top:0px;">@Model.Price.ToString("C")</h3>

            <p>Apenas @Model.QtyStock em estoque!</p>
            <p>@Model.Description</p>

            <div class="section" style="padding-bottom: 20px;">
                <h6 class="title-attr"><small>QUANTIDADE</small></h6>
                
                <div>
                    <div class="btn-minus"><span style="font-size: 15px">-</span></div>
                    <input style="font-size: 15px" type="text" value="1"/>
                    <div class="btn-plus"><span style="font-size: 15px">+</span></div>
                </div>
            </div>
            
            <div class="section" style="padding-bottom: 20px">
                <button class="btn btn-success"><span style="margin: 0 20px 0 20px" aria-hidden="true">COMPRAR</span></button>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}